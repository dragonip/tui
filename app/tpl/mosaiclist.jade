div.tui-mosaic.list-container(style="width:"+ w, data-appid=id)
	- if (things.length > 0)
		- for (var i = 0; i < things.length; i++ )
			div(class='item '+ (alterClass ? 'larger':'regular'), data-sequence=i)
				- if (things[i].thumbnail.length < 5 )
					div.imgcont
						div.default_icon.screen_default_icon_size
				- else
					div.imgcont
						img(src=things[i].thumbnail)
				span.title!= things[i].publishName
				ul.channel-settings-icons
					- if (things[i].isLocked)
						li.icon.locked
					- if (things[i].isBookmarked)
						li.icon.bookmarked
					- if (things[i].personalRecordingOptions && things[i].personalRecordingOptions.canRecord) 
						li.icon.recordable
				- if (!/[^0-9]/.test(things[i].id))
					div.object-index!= things[i].id
				- if (things[i].isDir !== false)
					div.folder-icon
	- else
		div.no-content!= nocontentstring
